@model AspCoreEve.Models.BusInformation

<h4>BusInformation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"  
              data-ajax="true" data-ajax-method="POST"
              data-ajax-success="OnSuccessFC"
              data-ajax-failure="OnFailureFC"
              data-ajax-begin="OnBeginFC"
              data-ajax-complete="OnCompleteFC"
              enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Bus_Name" class="control-label"></label>
                <input asp-for="Bus_Name" class="form-control" />
                <span asp-validation-for="Bus_Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SitAvailable" /> @Html.DisplayNameFor(model => model.SitAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="~/uploads/@Model.ImagePath" width="50" height="50" />

                <input type="file" id="Image" name="Image" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cid" class="control-label"></label>
                <select asp-for="Cid" class="form-control" asp-items="ViewBag.Cid"></select>
                <span asp-validation-for="Cid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
